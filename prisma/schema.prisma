generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email String  @unique
  id    Int     @default(autoincrement()) @id
  name  String? @unique
  posts Post[]
}

model Post {
  authorId  Int?
  content   String?
  excerpt   String?
  id        Int      @default(autoincrement()) @id
  draft     Boolean  @default(false)
  title     String   @unique
  createdAt DateTime
  updatedAt DateTime
  author    User?    @relation(fields: [authorId], references: [id])
  slug      String
  source    String
}